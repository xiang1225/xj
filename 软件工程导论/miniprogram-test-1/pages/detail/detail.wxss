.hd{
  background: linear-gradient(#409d6e, white);
  border-bottom: 1px solid #9d9797;
}
.hd image{
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 20px;
}
.hd view{
  display: inline-block;
  margin-top: 20px;
  margin-right: 20px;
}
.hd textarea{
  height: 190rpx;
  width: 400rpx;
  font-size: 30rpx;
}
.zy{
  font-size: 30rpx;
  color: gray
}
.gx{
  display: block;
  margin-top: 20rpx;
}
.name{
  letter-spacing: 5px;
  display: block;
}
.main view{
  border-bottom: 1px solid #9d9797;
  padding: 0 20px;
}
.main-hd view{
  padding: 0;
  border: 0;
  height: 60rpx;
  line-height: 60rpx;
}
.main-hd view text{
  margin-right: 50rpx;
  width: 250rpx;
  display: inline-block;
}
.wpjs view{
  padding: 0;
